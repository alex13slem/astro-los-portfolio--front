---
import type {HTMLAttributes} from 'astro/types';

type TagType = 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';

interface Props extends HTMLAttributes<'div'> {
  as?: any;
}

const {as: Tag = 'h2', class: className, ...props}: Props = Astro.props;
---

<Tag class:list={[`title`, `title-${Tag}`, className]} {...props}><slot /></Tag>

<style lang="scss">
  .title {
    font-family: 'Exo 2';
    font-weight: 700;
    text-transform: uppercase;

    &-h1 {
      font-size: 4.8rem;
    }
    &-h2 {
      font-size: 5rem;
    }
    &-h3 {
    }
    &-h4 {
    }
    &-h5 {
    }
    &-h6 {
    }
  }
</style>
